<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#23395B"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/text_login_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="ID"
        android:textColor="#60ffffff"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/con_enroll_name"
        app:layout_constraintStart_toStartOf="@+id/con_enroll_name" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/con_pw"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:background="#50FAFAFA"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/btn_login_two"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_login_id">

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/con_enroll_name"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:background="#50FAFAFA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/text_login_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Password"
        android:textColor="#60ffffff"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/con_pw"
        app:layout_constraintStart_toStartOf="@+id/con_pw" />

    <EditText
        android:id="@+id/edit_login_id"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginEnd="35dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="8dp"
        android:background="#50FAFAFA"
        android:ems="10"
        android:paddingLeft="15dp"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/con_enroll_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/con_enroll_name" />

    <EditText
        android:id="@+id/edit_login_pw"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginEnd="35dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="8dp"
        android:background="#50FAFAFA"
        android:ems="10"
        android:paddingLeft="15dp"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="@+id/con_pw"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/con_pw" />

    <Button
        android:id="@+id/btn_login_one"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="125dp"
        android:layout_marginStart="135dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/radius"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/btn_login_two"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_login_two"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_login_two"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="130dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/radius"
        android:text="Join"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_login_id"
        app:layout_constraintVertical_bias="0.61" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/con_enroll_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

</android.support.constraint.ConstraintLayout>